<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prova.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Digite o código de um ativo da bolsa."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Digite o código de um ativo da bolsa." />
            <Entry
                x:Name="campoSimbolo"
                MaxLength="10"
                Text=""/>
            <Button
                x:Name="BuscarInformacoes"
                Text="Pesquisar" 
                SemanticProperties.Hint="Busca Informação"
                Clicked="CliqueBuscarInformacoes"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
